{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production NODE_EXECUTION_MODE=production remix build && npm run build:css",
    "build:css": "tailwindcss -i ./app/styles/index.css -o ./app/styles/tailwind.css --minify",
    "deploy": "fly deploy --remote-only",
    "dev": "cross-env NODE_ENV=development NODE_EXECUTION_MODE=development remix dev",
    "dev:css": "tailwindcss -i ./app/styles/index.css -o ./app/styles/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production NODE_EXECUTION_MODE=production remix-serve build",
    "generate": "yarn generate:pim && yarn generate:service-api",
    "generate:pim": "graphql-codegen --config codegen.pim.yml",
    "generate:service-api": "graphql-codegen --config codegen.service-api.yml"
  },
  "dependencies": {
    "@crystallize/grid-renderer": "^2.1.1",
    "@crystallize/react-content-transformer": "^2.0.3",
    "@crystallize/react-image": "^7.3.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.11",
    "@remix-run/react": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@stripe/react-stripe-js": "^1.12.0",
    "@stripe/stripe-js": "^1.38.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "immer": "^9.0.15",
    "lodash": "^4.17.21",
    "parse-duration": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-player": "^2.11.0",
    "react-query": "^3.39.2",
    "remix": "^1.7.2",
    "yarn-upgrade-all": "^0.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@graphql-codegen/cli": "^2.13.1",
    "@graphql-codegen/fragment-matcher": "^3.3.1",
    "@graphql-codegen/gql-tag-operations-preset": "^1.6.0",
    "@graphql-codegen/near-operation-file-preset": "^2.4.1",
    "@graphql-codegen/typed-document-node": "^2.3.3",
    "@graphql-codegen/typescript": "^2",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@remix-run/dev": "^1.7.2",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.4.0",
    "graphql": "^15.5.1",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
